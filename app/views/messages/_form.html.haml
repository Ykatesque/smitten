= form_for (@message), :remote => true do |f|
  - if @message.errors.any?
    #error_explanation
      %h2
        = pluralize(@message.errors.count, "error")
        prohibited this message from being saved:

      %ul
        - @message.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.text_field :content, :type => :text, :placeholder => "Your message..."
    = f.hidden_field :receiver_id, :value => @conversation_partner.id
  .actions
    = f.submit "Send", :class => "button prefix anchor"
