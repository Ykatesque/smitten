var dashboard = $("#dashboard")
var homepage = $("#homepage")
var newspark = $('#new_spark_div')
dashboard.empty().html("<%= j render 'dashboardpartial' %>")
newspark.removeAttr("style");

var smoothtrans = function(){
  dashboard.css('display', 'block');
  homepage.css('position', 'absolute')
  homepage.css('width', '100%')
  homepage.animate({
    right:'100%',
    opacity: 1
  },{ duration: 500, queue: false})

  dashboard.animate({
    left: "0%",
    opacity: 1
  },{ duration: 500, queue: false});

}
smoothtrans();

