- if !@nearby_sparks[0].nil?
  - @nearby_sparks.each do |spark|

    .spark
      - if !spark.title.blank?

        %h5.text
          .text.theme.bold= truncate(spark.input_location)
          = spark.created_at.advance(:hours => -7).strftime('%B %e, %Y at %l:%M %p')
        %h3.text.color.theme.italic= link_to truncate(spark.title), spark_path(spark.id)
      - else
        %h4
          = link_to truncate(spark.content), spark_path(spark.id)
          (
          = truncate(spark.input_location)
          )
          = spark.created_at.advance(:hours => -7).strftime('%B %e, %Y at %l:%M %p')
      %h5.text
        "
        = spark.content
        "
      %hr
