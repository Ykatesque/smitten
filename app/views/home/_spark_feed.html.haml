- if !@nearby_sparks[0].nil?
  - @nearby_sparks.each do |spark|

    #spark.spark
      - if !spark.title.blank?

        %h4.text
          .theme.color.text.normal= truncate(spark.input_location)
        %h5.text.italic.sparkdatepadding
          = spark.created_at.advance(:hours => -7).strftime('%B %e, %Y at %l:%M %p')

        %h3.mypadding.text.color.theme.italic= link_to truncate(spark.title), spark_path(spark.id), :remote => true
      - else
        %h4
          = link_to truncate(spark.content), spark_path(spark.id), :remote => true
          (
          = truncate(spark.input_location)
          )
          = spark.created_at.advance(:hours => -7).strftime('%B %e, %Y at %l:%M %p')
      %h5.text
        "
        = spark.content
        "
      %hr
